+variables({
  "p.shareOn" : { description: "Share on", value: "facebook, twitter, whatsapp, telegram"},
  "p.pagination" : { description: "Pagination in post", value: "false"},
  "p.template" : { description: "Default post template", value: "default"},
  "p.innerContent": { description: "Internal content every", value: "4" },
  "p.highlight": { description: "Enable highlight.js", value: "false" },
  "p.autoToc": { description: "Enable auto TOC", value: "false" },
  "p.tocHeading": { description: "Headings for TOC", value: "h2, h3, h4" },
  "p.related": { description: "Enable related post", value: "2" },
  "p.relShuffle": { description: "Randomness level", value: "8" },
  "p.relCols": { description: "Min related width", value: "18rem" },
})
| #{'\n'}
